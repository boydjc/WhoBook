<div id="userTrendPostContainer">
  <% if user_signed_in? %>
    <div id="profileInfo">
      <div>
        <img height="96px" width="96px" src="https://bulma.io/images/placeholders/96x96.png">
      </div>
      <div>
        <strong id="usernameDisplay">@<%= current_user.username %></strong>
      </div>
    </div>
    <div id="userPostsContainer">
      <h2>Your Posts</h2>
      <div id="userPosts">
        <% current_user.posts.each do | post | %>
          <p><%=link_to post.title, post_path(post) %></p>
        <% end %>
      </div>
    </div>
  <% end %>
  <div id="trendingPostsContainer">
    <h2>Trending Posts</h2>
    <p>Post 1</p>
    <p>Post 2</p>
    <p>Post 3</p>
    <p>Post 4</p>
    <p>Post 5</p>
  </div>
</div>

<div id="feedContainer">
  <% if user_signed_in? %>
    <h1>Create a post!</h1>
    <div id="newPostFormContainer">
      <%= render 'posts/form', post: @post %>
    </div>
    <hr>
  <% end %>  
  <h1>Posts</h1>
  <div id="feedPostContainer">
    <% if @posts.any? %>  
      <% @posts.each do |post| %>
        <div id="feedPost">
          <%= render post %>
        </div>
      <% end %>
    <% else %>
      <% if user_signed_in? %>
        <p id="noPostMsg">There are no posts. Be the one to make history today!</p>
      <% else %>
        <p id="noPostMsg">There are no posts. Sign in and make history today!</p>
      <% end %>
    <% end %>
  </div>
</div>

